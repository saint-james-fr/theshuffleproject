<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>The Shuffle Project: {{ARTIST_DISPLAY_NAME}}</title>
    <meta name="title" content="The Shuffle Project: {{ARTIST_DISPLAY_NAME}}" />
    <meta
      name="description"
      content="{{ARTIST_DESCRIPTION}}"
    />
    <meta
      name="keywords"
      content="{{ARTIST_KEYWORDS}}"
    />
    <meta name="author" content="The Shuffle Project" />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{SITE_URL}}" />
    <meta property="og:title" content="The Shuffle Project: {{ARTIST_DISPLAY_NAME}}" />
    <meta
      property="og:description"
      content="{{ARTIST_DESCRIPTION}}"
    />
    <meta property="og:image" content="{{SOCIAL_IMAGE}}" />
    <meta property="og:site_name" content="The Shuffle Project" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="{{SITE_URL}}" />
    <meta property="twitter:title" content="The Shuffle Project: {{ARTIST_DISPLAY_NAME}}" />
    <meta
      property="twitter:description"
      content="{{ARTIST_DESCRIPTION}}"
    />
    <meta property="twitter:image" content="{{TWITTER_IMAGE}}" />

    <!-- Additional SEO -->
    <meta name="theme-color" content="{{THEME_COLOR}}" />
    <link rel="canonical" href="{{SITE_URL}}" />

    <!-- Web App Manifest -->
    <link rel="manifest" href="/site.webmanifest" />
  </head>
  <body>
    <div id="app"></div>
    <script type="module" src="/src/main.ts"></script>
  </body>
</html>
